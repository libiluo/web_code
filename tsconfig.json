{
  "compilerOptions": {
    /* 路径别名 */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components": [
        "src/components"
      ],
      "@/lib": [
        "src/lib"
      ],
      "@/ui": [
        "src/components/ui"
      ],
      "@/hooks": [
        "src/hooks"
      ],
      "@/pages": [
        "src/pages"
      ]
    },
    /* 环境与模块设置 */
    "module": "esnext", // ✅ 使用现代ES模块
    "moduleResolution": "bundler", // ✅ 为Vite/webpack优化的解析方式
    "target": "esnext",
    "jsx": "react-jsx",
    /* 输出与类型支持 */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* 严格类型检查 */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    /* 兼容性与性能 */
    "skipLibCheck": true,
    /* 现代TS选项 */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": [
    "src",
    "vite-env.d.ts"
  ]
}